@import "assets/font/kristi/stylesheet.css";
@import "assets/font/post-no-bills/stylesheet.css";
@import "assets/font/montserrat/stylesheet.css";

body {
  font-family: Montserrat, sans-serif;
  letter-spacing: 2px;
  font-size: 12px;
  margin: 0;
  padding: 0;
  background: unquote('rgb(var(--backgroundColor))');
  color: var(--textColor);
}

h1 {
  letter-spacing: 14px;
  text-transform: uppercase;
  font-weight: 400;
  font-size: 24px;
}

h2 {
  letter-spacing: 5px;
  text-transform: uppercase;
  font-weight: 400;
  font-size: 20px;
}

h3 {
  letter-spacing: 2px;
  text-transform: uppercase;
  font-weight: 400;
  font-size: 16px;
}


input[type="text"] {
  font-size: 14px;
}

::selection {
  color: var(--actionColor);
  background-color: var(--backgroundColor);
}

script {
  display: none;
}

a,
button,
input[type="button"],
.action {
  appearance: none;
  font-weight: inherit;
  font-family: inherit;
  font-style: inherit;
  letter-spacing: inherit;
  word-spacing: inherit;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
  color: var(--actionColor);
  text-decoration: none;
  transition: text-shadow 0.3s ease, color 0.3s ease;

  &:hover {
    color: var(--activeColor);
    text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.3);
  }
}

button {
  transition: all 0.4s ease-in-out;
  fill: var(--actionColor);

  &:hover {
    background-color: rgba(255, 255, 255, 0.1);
    fill: var(--activeColor);
  }

  &.active {
    background-color: rgba(255, 255, 255, 0.2);
  }

  &>.icon>svg {
    width: 30px;
  }
}

.error {
  fill: var(--errorColor);
  color: var(--errorColor);
}

.info {
  color: var(--textColorLight);
}

*::-webkit-scrollbar-thumb {
  background: var(--scrollbarThumb);
  border: 4px solid transparent;
  border-radius: 8px;
  background-clip: padding-box;

  &:hover {
    background: var(--scrollbarThumbHover);
    background-clip: padding-box;
  }
}

*::-webkit-scrollbar {
  width: 16px;
  height: 16px;
}

*::-webkit-scrollbar-track {
  background: var(--scrollbarColor);
}