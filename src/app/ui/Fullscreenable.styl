.fullscreenable {
  position: relative;
  display: inline-block;

  .fullscreenable-button {
    pointer-events: all;
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 24px;
    cursor: pointer;
    border: none;
    background: none;
  }
  
  .fullscreenable-content {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }
}
