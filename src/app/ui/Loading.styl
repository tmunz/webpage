.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;

  .ripple {
    position: relative;
    width: 50px;
    height: 50px;

    &::before,
    &::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      border: 4px solid var(--accentColor);
      opacity: 0;
      animation: ripple 2s infinite;
    }

    &::after {
      animation-delay: 1.5s;
    }

    @keyframes ripple {
      0% {
        transform: scale(0.5);
        opacity: 0;
      }

      25% {
        opacity: 1;
      }

      100% {
        transform: scale(2.5);
        opacity: 0;
      }
    }
  }
}