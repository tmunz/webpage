.drag-swipe-indicator {
  position: absolute;
  pointer-events: none;
  z-index: 9999998;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  .drag-swipe-indicator-item {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.4);
    border-radius: 50%;
    transition: opacity 0.2s;
    transform: translate(-50%, -50%);
    padding: 20px;

    .icon {
      transition: fill 0.2s;
      fill: rgba(255, 255, 255, 0.8);
    }
  }
}