.portfolio {
  .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .item-wrapper {
    perspective: 1000px;

    .item {
      perspective: 1000px;
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: center;
      align-items: center;
      align-content: center;
      transform: rotateX(-90deg);

      &>* {
        width: 300px;
        aspect-ratio: 1 / 1;
        backface-visibility: hidden;
      }

      .image-container {
        background: white;

        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
        }
      }

      .text-container {
        background: yellow;
        transform: rotateY(90deg);
      }
    }

    &:nth-child(2n) {
      .item {
        flex-direction: row-reverse;
      }

      &.entering-top .item .text-container {
        transform-origin: bottom right;
        animation: rotateItemContentRight 0.6s forwards 0.2s;
      }

      &.entering-bottom .item .text-container {
        transform-origin: top right;
        animation: rotateItemContentRight 0.6s forwards 0.2s;
      }
    }

    &.entering-top {
      .item {
        transform-origin: bottom left;
        animation: rotateItemEnterTop 0.6s forwards;

        .text-container {
          transform-origin: bottom left;
          animation: rotateItemContentLeft 0.6s forwards 0.2s;
        }
      }
    }

    &.entering-bottom {
      .item {
        transform-origin: top left;
        animation: rotateItemEnterBottom 0.6s forwards;

        .text-container {
          transform-origin: top left;
          animation: rotateItemContentLeft 0.6s forwards 0.2s;
        }
      }
    }
  }
}

@keyframes rotateItemEnterTop {
  0% {
    transform: rotateX(90deg);
  }

  100% {
    transform: rotateX(0deg);
  }
}

@keyframes rotateItemEnterBottom {
  0% {
    transform: rotateX(-90deg);
  }

  100% {
    transform: rotateX(0deg);
  }
}

@keyframes rotateItemContentLeft {
  0% {
    transform: rotateY(90deg);
  }

  100% {
    transform: rotateY(0deg);
  }
}

@keyframes rotateItemContentRight {
  0% {
    transform: rotateY(-90deg);
  }

  100% {
    transform: rotateY(0deg);
  }
}