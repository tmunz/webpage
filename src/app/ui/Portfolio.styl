.portfolio {
  overflow: auto;
  height: 100%;
  /* scroll-snap-type: y mandatory; */

  .item-wrapper {
    perspective: 1000px;
    width: clamp(400px, 90%, 1000px);
    margin: 0 auto;
    scroll-snap-align: center;

    .item {
      perspective: 1000px;
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: center;
      align-items: center;
      align-content: center;
      transform: rotateX(-90deg);
      /* margin: 100px auto; */

      &>* {
        width: 50%;
        aspect-ratio: 1 / 1;
        backface-visibility: hidden;
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
      }

      .image-container {
        background: white;
        overflow: hidden;

        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
        }
      }

      .text-container {
        background-color: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transform: rotateY(90deg);
        overflow: auto;
      }
    }

    &:nth-child(2n) {
      .item {
        flex-direction: row-reverse;
        .text-container {
          transform: rotateY(-90deg);
        }
      }

      &.entering-top .item .text-container {
        transform-origin: bottom right;
        animation: rotateItemContentRight 0.6s forwards 0.2s;
      }

      &.entering-bottom .item .text-container {
        transform-origin: top right;
        animation: rotateItemContentRight 0.6s forwards 0.2s;
      }
    }

    &.entering-top {
      .item {
        transform-origin: bottom left;
        animation: rotateItemEnterTop 0.6s forwards;

        .text-container {
          transform-origin: bottom left;
          animation: rotateItemContentLeft 0.6s forwards 0.2s;
        }
      }
    }

    &.entering-bottom {
      .item {
        transform-origin: top left;
        animation: rotateItemEnterBottom 0.6s forwards;

        .text-container {
          transform-origin: top left;
          animation: rotateItemContentLeft 0.6s forwards 0.2s;
        }
      }
    }
  }
}

@keyframes rotateItemEnterTop {
  0% {
    transform: rotateX(90deg);
  }

  100% {
    transform: rotateX(0deg);
  }
}

@keyframes rotateItemEnterBottom {
  0% {
    transform: rotateX(-90deg);
  }

  100% {
    transform: rotateX(0deg);
  }
}

@keyframes rotateItemContentLeft {
  0% {
    transform: rotateY(90deg);
  }

  100% {
    transform: rotateY(0deg);
  }
}

@keyframes rotateItemContentRight {
  0% {
    transform: rotateY(-90deg);
  }

  100% {
    transform: rotateY(0deg);
  }
}