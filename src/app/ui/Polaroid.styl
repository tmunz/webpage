.polaroid {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  padding: 19px;
  margin: 5px;
  transition: 0.3s;
  width: 344px;
  height: 419px;
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;

  background:
    linear-gradient(30deg, transparent 4px, rgba(0, 0, 0, 0.02) 7px, transparent 8px),
    linear-gradient(-30deg, transparent 4px, rgba(0, 0, 0, 0.02) 7px, transparent 8px),
    rgba(240, 240, 240, 1);
  background-size: 14px 8px, 14px 8px;
  background-position: 0px 0px, 0px 0px;

  .polaroid-frontside {
    width: 100%;
    height: 100%;

    .polaroid-image {
      width: 306px;
      height: 313px;

      &>* {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: 50% 0;
        background-color: rgba(0, 0, 0, 1);
      }
    }
  }
}