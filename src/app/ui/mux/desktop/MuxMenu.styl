.mux-menu {
  width: '100%';
  height: '100%';
  background-color: var(--muxMenuColor);
}

.mux-menu-content {
  --imgSize: 24px;
  z-index: 9999;
  position: absolute;
  bottom: 62px;
  left: 0;
  width: 300px;
  padding: 16px;
  max-height: 400px;
  display: flex;
  background-color: rgba(0, 0, 0, 0.85);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
  transition: all 0.3s ease-in-out;
  border-radius: var(--muxBorderRadius);

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    margin-bottom: 8px;

    &:last-child {
      margin-bottom: 0;
    }
  }

  .programs {
    overflow: auto;
  }

  .controls {
    align-content: end;
  }

  button {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 8px;
    background: none;
    border: none;
    color: #fff;
    text-align: left;
    cursor: pointer;
    transition: background-color 0.3s ease;

    &:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
  }

  img {
    width: var(--imgSize);
    height: var(--imgSize);
    margin-right: 12px;
    transition: transform 0.2s ease, filter 0.2s ease;

    &:hover {
      transform: scale(1.1);
      filter: brightness(1.2);
    }
  }
}
