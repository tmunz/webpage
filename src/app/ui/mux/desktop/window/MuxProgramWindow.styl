.mux-program-window {
  border: 1px solid var(--muxBorderColor);
  border-radius: var(--muxBorderRadius);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  grid-template-rows: 60px 1fr;
  width: 100%;
  height: 100%;

  .mux-program-window-content {
    width: 100%;
    height: 100%;
    overflow: auto;
    box-sizing: border-box;
    backdrop-filter: blur(10px);
    background-color: rgba(0, 0, 0, 0.6);

    &>* {
      margin: -2px 0;
      box-sizing: border-box;
      min-height: 100%;
      min-width: 100%;
    }
  }
}