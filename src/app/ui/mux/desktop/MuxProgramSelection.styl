.mux-program-selection {
  background-color: #f5f5f5;
  border-right: 1px solid #ccc;
  transition: width 0.3s ease-in-out;
  overflow-x: auto;
  overflow-y: hidden;

  ul {
    padding: 0;
    margin: 0;
    list-style: none;

    li {
      margin: 10px 0;
      display: inline-block;
      
      button {
        display: flex;
        align-items: center;
        background: none;
        border: none;
        width: 100%;
        padding: 10px;
        cursor: pointer;
        text-align: left;
        transition: background-color 0.2s ease-in-out;

        &:hover {
          background-color: #ddd;
        }

        img {
          width: 32px;
          height: 32px;
          margin-right: 10px;
        }

        span {
          display: none;
          font-size: 16px;
        }
      }
    }
  }
}
