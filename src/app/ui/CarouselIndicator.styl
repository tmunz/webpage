.carousel-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;

  .carousel-dots {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    filter: url('#blob');

    .dot {
      border-radius: 50%;
      background-color: rgba(249, 201, 149, 0.5);
      cursor: pointer;
      position: relative;
      transition: background-color 0.6s ease;

      &:hover {
        background-color: var(--actionColor);
      }
    }

    .active-dot {
      position: absolute;
      top: 0;
      left: 0;
      transition: all 0.6s ease;
      background-color: var(--activeColor);
      z-index: 1;
    }
  }
}