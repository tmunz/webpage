.photo-row {
  display: grid;
  grid-template-columns: minmax(0, 160px) minmax(300px, 1fr);
  padding: 0;
  align-items: end;
  margin-top: var(--gapSize);
  transition: padding ease-in-out 0.6s;

  td.label {
    position: sticky;
    left: 0;
    bottom: 30px;
    z-index: 2;
    padding-right: 20px;
    color: #888;
    mix-blend-mode: difference;
  }
}