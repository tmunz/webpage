.image-entry {

  background: linear-gradient(110deg, rgba(200, 200, 200, 0.2) 20%, rgba(230, 230, 230, 0.3) 30%, rgba(200, 200, 200, 0.2) 45%);
  background-size: 200% 100%;
  animation: 1.5s loading linear infinite;
  transform: width 0.4s ease, height 0.4s ease, opacity 1s ease;

  &.loading {
    .image-entry-img {
      opacity: 0;
    }
  }

  .image-entry-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 0;
    opacity: 1;
    transition: opacity 1s ease;
  }

  .image-entry-overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    .info-bar {
      position: absolute;
      top: 0px;
      left: 0px;
      right: 0px;
      opacity: 1;
      z-index: 2;
      transition: opacity 0.6s ease-in-out;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      justify-content: space-between;
      align-items: center;
      overflow: hidden;

      &.hide-info {
        opacity: 0;
      }

      .world-map {
        position: absolute;
        top: -60px;
        left: -20px;
        z-index: -1;
      }

      .header {
        width: 100%;
        text-align: center;
        color: #fff;

        .location {
          color: #aaa;
        }
      }
    }
  }

  .selection-overlay {
    pointer-events: all;
    cursor: pointer;
  }
}

@keyframes loading {
  to {
    background-position-x: -200%;
  }
}