.image-entry {
  position: relative;
  max-height: 100%;
  display: inline-block;

  &.active {
    .control-button {
      background-color: rgba(255, 255, 255, 0.1);

      &:hover {
        background-color: rgba(255, 255, 255, 0.2);
      }
    }

    .image-entry-overlay.user-action {
      .info-bar {
        height: 80px;
      }

      .control-button {
        backdrop-filter: blur(5px);
        clip-path: circle(30px at 50% calc(100% - 20px));

        &.close-button.active {
          clip-path: circle(60px at 50% 100%);
        }
      }
    }
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 0;
  }

  .image-entry-overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    .control-button {
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      fill: white;
      mix-blend-mode: difference;
      backdrop-filter: blur(0);
      display: flex;
      align-items: end;
      justify-content: center;
      background-color: rgba(255, 255, 255, 0.0);
      transition: background-color 0.4s ease, clip-path 0.4s ease;

      &:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      &.close-button {
        clip-path: circle(70.8% at 50% 50%);

        &.active {
          clip-path: circle(0% at 50% 100%);
        }
      }

      &.prev-button,
      &.next-button {
        clip-path: circle(0% at 50% 100%);
        width: 160px;

        &.prev-button {
          left: auto;
          right: 50%;
        }

        &.next-button {
          left: 50%;
          right: auto;
        }
      }
    }

    .info-bar {
      position: absolute;
      top: 0px;
      left: 0px;
      right: 0px;
      height: 0px;
      z-index: 2;
      transition: height 0.6s ease;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      justify-content: space-between;
      align-items: center;
      overflow: hidden;

      .world-map {
        position: absolute;
        top: -60px;
        left: -20px;
      }

      .header {
        width: 100%;
        text-align: center;
        color: #fff;

        .location {
          color: #aaa;
        }
      }
    }
  }

  .selection-overlay {
    pointer-events: all;
    cursor: pointer;
  }
}