    .parallax {
      position: absolute;
      transition: transform 0.2s ease;
    }

    .background-image {
      left: -10%;
      top: -10%;
      right: -10%;
      bottom: -10%;
      width: 120%;
      height: 120%;
      object-fit: cover;
      margin: auto;
      text-align: center;
    }

    .title {
      left: 0px;
      top: 40px;
      padding: 15px 0;
      z-index: 1;
      writing-mode: vertical-lr;
      color: white;
      mix-blend-mode: difference;
      pointer-events: none;
      overflow: ellipsis;
      white-space: nowrap;
    }
  }

  .content-container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 100% 0fr;
    transition: grid-template-rows 1s ease;

    &>.close-button {
      border-bottom: 1px solid white;
    }

    &.active {
      grid-template-rows: 40px 1fr;
    }

    .content {
      position: relative;
      margin-left: 62px;
      overflow: auto;
      transition: overflow 0s linear 1s;
    }
  }
}

@media screen and (max-width: 800px) {
  .frame {
    &:not(.active) {
      width: 0px;
      min-width: 0px;
    }
  }
}
