.frame {

  --frame-close-button-size: 40px;
  --frame-title-size: 60px;

  flex: 1;
  transition: all 0.6s ease;
  position: relative;
  height: 100%;
  box-shadow: 4px 0px 8px rgba(0, 0, 0, 0.4);
  width: 10px;
  min-width: 10px;

  .title-container {
    overflow: hidden;
  }

  &:hover {
    min-width: var(--frame-title-size);
  }

  &.active {
    flex: 500;
  }

  .title-container {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    right: 0;


