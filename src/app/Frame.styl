    .parallax {
      position: absolute;
      transition: transform 0.2s ease;
    }

    .background-image {
      left: -10%;
      top: -10%;
      right: -10%;
      bottom: -10%;
      width: 120%;
      height: 120%;
      object-fit: cover;
      margin: auto;
      text-align: center;
      z-index: -1;
    }

    .title {
      left: 0px;
      top: 40px;
      padding: 15px 0;
      z-index: 1;
      writing-mode: vertical-lr;
      color: white;
      mix-blend-mode: difference;
      pointer-events: none;
      overflow: ellipsis;
      white-space: nowrap;
    }
  }

  .content-container {
    position: relative;
    width: 100%;
    height: 100%;

    &>.frame-close-button {
      border-bottom: 1px solid white;
      position: sticky;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 99999999999;
    }

    &.active {
      .frame-close-button {
        height: var(--frame-close-button-size);
      }
    }

    .content {
      overflow: auto;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      margin-top: calc(-1 * var(--frame-close-button-size));
      padding-top: var(--frame-close-button-size);
      padding-left: var(--frame-title-size);
    }
  }
}

@media screen and (max-width: 800px) {
  .frame {
    &:not(.active) {
      width: 0px;
      min-width: 0px;
    }
  }
}