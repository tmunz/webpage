.frame {

  --frame-close-button-size: 40px;
  --frame-title-size: 60px;

  flex: 1;
  position: relative;
  height: 100%;
  box-shadow: 4px 0px 8px rgba(0, 0, 0, 0.4);
  width: 10px;
  min-width: 10px;

  .title-container {
    overflow: hidden;
  }

  &:hover {
    min-width: var(--frame-title-size);
  }

  &.active {
    flex: 300;
  }

  &.animate {
    transition: all 0.6s ease;
  }

  .title-container {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    right: 0;

    .parallax {
      position: absolute;
      transition: transform 0.2s ease;
    }

    .background-image {
      left: -5%;
      top: -5%;
      right: -5%;
      bottom: -5%;
      width: 110%;
      height: 110%;
      margin: auto;
      text-align: center;
      z-index: -1;

      /* &>img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      &>.perspective-image {
        position: absolute!important;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      } */
    }

    .title {
      left: 0;
      top: 40px;
      bottom: 0;
      padding: 15px 0;
      z-index: 999999999; /* always on top */
      writing-mode: vertical-lr;
      color: white;
      mix-blend-mode: difference;
      pointer-events: none;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
    }
  }

  .content-container {
    position: relative;
    width: 100%;
    height: 100%;

    &>.frame-close-button {
      border-bottom: 1px solid white;
      position: sticky;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 999999999;
    }

    &.active {
      .frame-close-button {
        height: var(--frame-close-button-size);
      }
    }

    .content {
      overflow: auto;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      margin-top: calc(-1 * var(--frame-close-button-size));
      padding-top: var(--frame-close-button-size);
      padding-left: var(--frame-title-size);
    }
  }
}

@media screen and (max-width: 800px) {
  .frame {
    &:not(.active) {
      width: 0px;
      min-width: 0px;
    }
  }
}