.mb-300sl-painting {
  .text-container {

    h3 {
      margin-top: 0;
    }
    a {
      position: sticky;
      z-index: 2;
    }

    .image-container {
      text-align: right;
      margin: 20px 20% 20px auto;
      width: 50%;
      transform: rotate(3deg);

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
  }
}