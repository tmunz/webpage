.art-frame {
  .background-image {
    transition: filter 0.8s ease;

    &.parallax {
      transition: transform 0.2s ease, filter 0.8s ease;
    }
  }

  &.active .background-image {
    filter: blur(50px);
  }
}

.art {
  width: clamp(400px, 90%, 1000px);
  margin: 0 auto;
  position: relative;

  .paint-yourself {
    z-index: 1;
    position: sticky;
    top: 0px;
    padding: 10px 0;
    transition: transform 1s ease;
    transform: scale(0.5) translateX(-45%) translateY(-30%);

    @keyframes wiggle {
      0% {
        transform: rotateX(-2deg) rotateY(-2deg) rotateZ(-3deg);
      }

      100% {
        transform: rotateX(2deg) rotateY(0deg) rotateZ(-2deg);
      }
    }

    &:not(.active)>.paper-folding {
      animation: wiggle 1s infinite alternate;
    }

    &.active {
      transform: scale(1) translateX(0) translateY(0);
    }
  }

  .paint-yourself-hint {
    font-family: kristi, sans-serif;
    font-size: 50px;
    max-width: 400px;
    position: absolute;
    top: 200px;
    left: 50%;
    transform: translate(0, 0) rotate(5deg);

    svg {
      position: absolute;
      top: 0;
      left: 0;
      path {
        fill: var(--textColor);
      }
    }
  }

  .flip-list {
    .image-container {
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }
  }
}