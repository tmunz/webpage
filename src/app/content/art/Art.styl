.art-frame {
  .background-image {
    transition: filter 0.8s ease;

    &.parallax {
      transition: transform 0.2s ease, filter 0.8s ease;
    }
  }

  &.active .background-image {
    filter: blur(50px);
  }
}

.art {
  width: 100%;
  height: 100%;
  
  --actionColor: #444;
  --activeColor: #222;
}