.mb-300sl-content {
  color: white;

  .sticky-container {
    .sticky-content {
      width: clamp(150px, 100%, 400px);
      top: 25vh;
      position: sticky;
      margin-bottom: 50px;

      p {
        text-align: justify;
      }
    }
    &::after {
      content: '';
      display: block;
      height: 250px;
    }
  }

  h1 {
    opacity: 0.9;
    font-size: 15vw;
    font-weight: 900;
    display: flex;
    justify-content: left;
    align-items: top;
    mix-blend-mode: difference;
  }
}