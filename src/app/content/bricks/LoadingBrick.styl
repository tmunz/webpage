.loading-brick {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  perspective: 2000px;

  .brick {
    transform-style: preserve-3d;
  }

  .brick-face {
    position: absolute;
    transform-style: preserve-3d;
    transform: translate(-50%, -50%);

    &.brick-face-top {
      background-color: rgba(255, 0, 0, 1);

      .brick-stud-top {
        background: rgba(155, 0, 0, 1);
      }
    }

    &.brick-studs {
      .brick-stud-top {
        background-color: rgba(255, 0, 0, 1);
      }
    }

    .brick-stud {
      position: absolute;
      transform: translate(-50%, -50%);
      transform-style: preserve-3d;

      .brick-stud-top {
        clip-path: circle(35.36% at 50% 50%);
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
      }

      .brick-stud-side {
        background-color: rgba(155, 0, 0, 1);
        position: absolute;
        top: 50%;
        left: 50%;
        width: 70.72%;
      }
    }
  }
}