.aircraft-content {
  padding-top: 40px;
  position: sticky;
  top: 0;
  width: 100%;
  height: 50%;
  box-sizing: border-box;
  overflow-x: auto;
  overflow-y: hidden;

  .aircraft-grid {
    display: flex;
    gap: 10px;
    height: 100%;
    min-width: 100%;
    padding: 20px;
    box-sizing: border-box;

    h2 {
      margin: 0;
      color: rgb(255, 255, 255);
      font-size: 1.5em;
    }

    &>* {
      width: 100%;
      height: 100%;
      aspect-ratio: 1;
      object-fit: cover;
    }
  }
}
