.aircraft-content {
  --maskSize: 40px;
  padding-top: 40px;
  position: sticky;
  top: 0;
  width: 100%;
  height: 50%;
  box-sizing: border-box;
  overflow-x: auto;
  overflow-y: hidden;
  mask-image: linear-gradient(to right, black calc(100% - var(--maskSize)), transparent);

  -ms-overflow-style: none;
  scrollbar-width: none;

  &::-webkit-scrollbar {
    display: none;
  }

  .aircraft-grid {
    display: flex;
    gap: 10px;
    height: 100%;
    min-width: 100%;
    padding: 20px;
    box-sizing: border-box;

    h2 {
      margin: 0;
      color: rgb(255, 255, 255);
      font-size: 1.5em;
    }

    &>* {
      height: 100%;
      aspect-ratio: 1;
      position: relative;
      .icon {
        position: absolute;
        mix-blend-mode: difference;
        right: 10px;
        bottom: 10px;
        width: 10%;
        aspect-ratio: 1;
      }
      img {
        position: absolute;
        object-fit: cover;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
      }
    }
  }
}