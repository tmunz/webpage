.aircraft-content {
  .aircraft-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 10px;
    width: 100%;
    padding: 20px;
    box-sizing: border-box;

    h2 {
      margin: 0;
      color: rgb(255, 255, 255);
      font-size: 1.5em;
    }

    &>* {
      width: 100%;
      height: 100%;
      aspect-ratio: 1;
      object-fit: cover;
    }
  }
}
