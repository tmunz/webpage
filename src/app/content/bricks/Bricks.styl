.bricks {
  height: 100%;
  background-image:
    linear-gradient(-11deg, #fff 50px, transparent 50px),
    linear-gradient(169deg, #fff 50px, transparent 50px),
    linear-gradient(-11deg, #fff 50px, transparent 50px),
    linear-gradient(169deg, #fff 50px, transparent 50px);
  background-size: 258px 106px;
  background-position: 0px 0px, 1px 56px, 134px 54px, 136px 2px;
  background-color: rgba(200, 200, 200, 0.8);
  position: relative;
  overflow-x: hidden;
  overflow-y: auto;
  /* scroll-snap-type: y proximity; */

  &>* {
    scroll-snap-align: start;
    position: relative;
  }

  .polaroids {
    display: flex;
    flex-direction: row;
    justify-content: center;
    position: sticky;
    top: 0;

    .polaroid {
      &.flower-polaroid {
        transform: translate(40px, 40px) rotate(-3deg);
      }

      &.eiffel-polaroid {
        transform: translate(-40px, 90px) rotate(4deg);

        .eiffel-polaroid-content {
          position: relative;

          &>* {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
          }

        }
      }
    }

    text-align: center;
  }

  .aircraft {
    z-index: 2;

    .divider-brick {
      position: absolute;
      top: 0;
      left: 0;
      transform-style: preserve-3d;
    }

    .brick-face {
      position: absolute;
      transform-style: preserve-3d;
      transform: translate(-50%, -50%);

      &.brick-face-top {
        background-color: rgba(255, 0, 0, 1);

        .brick-stud-top {
          background: rgba(150, 0, 0, 1);
        }
      }

      &.brick-face-left {
        background-color: rgba(200, 0, 0, 1);
      }

      &.brick-face-front {
        background-color: rgba(150, 0, 0, 1);
        color: white;
        box-sizing: border-box;
      }

      &.brick-studs {
        .brick-stud-top {
          background-color: rgba(255, 0, 0, 1);
        }
      }

      .brick-stud {
        position: absolute;
        transition: all 0.4s ease;
        transform: translate(-50%, -50%);
        transform-style: preserve-3d;

        .brick-stud-top {
          clip-path: circle(35.36% at 50% 50%);
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
        }

        .brick-stud-side {
          background-color: rgba(150, 0, 0, 1);
          position: absolute;
          top: 50%;
          left: 50%;
          width: 70.72%;

        }
      }
    }

    .aircraft-content {
      min-height: 1000px;
      background-color: rgba(150, 0, 0, 1);

      .aircraft-images {
        display: flex;

        .aircraft-image {
          object-fit: cover;
          max-width: 25%;
          width: 200px;
        }
      }
    }
  }

  .mb-300sl {
    position: sticky;
    bottom: 0;
    z-index: 0;
    text-align: center;
    scroll-snap-align: start;
    background: url('./assets/mb_300sl_background.jpg') no-repeat center 50%;
    background-size: cover;
    font-size: 300px;
    color: white;
  }
}