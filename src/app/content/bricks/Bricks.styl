.bricks {
  height: 100%;
  background-image:
    linear-gradient(-11deg, #fff 50px, transparent 50px),
    linear-gradient(169deg, #fff 50px, transparent 50px),
    linear-gradient(-11deg, #fff 50px, transparent 50px),
    linear-gradient(169deg, #fff 50px, transparent 50px);
  background-size: 258px 106px;
  background-position: 0px 0px, 1px 56px, 134px 54px, 136px 2px;
  background-color: rgba(200, 200, 200, 0.8);
  position: relative;
  overflow: auto;
  scroll-snap-type: y mandatory;

  &>* {
    scroll-snap-align: start;
    height: 800px;
    position: relative;
  }

  .polaroids {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    
    .polaroid {
      position: fixed;

      &.flower-polaroid {
        transform: translate(-40%, 20px) rotate(-3deg);
      }

      &.eiffel-polaroid {
        transform: translate(40%, 50px) rotate(4deg);
      }
    }
    text-align: center;
    scroll-snap-align: start;
  }

  .mb-300sl {
    text-align: center;
    scroll-snap-align: start;
    height: 800px;
  }

}