.photo {
  --actionColor: #444;
  --activeColor: #222;
  --photoBackgroundColor: #aadbc3;

  height: 100%;
  width: 100%;
  overflow: auto;
  margin-left: calc(-1* var(--frame-title-size));
  padding-left: var(--frame-title-size);
  margin-top: calc(-1* var(--frame-close-button-size));
  padding-top: var(--frame-close-button-size);

  .camera-viewer {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .camera-viewer-focusing {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;
  }

  .photo-section {
    margin: 0 30px 30px;

    &:first-of-type {
      .photo-section-title {
        margin-top: -100vh;
      }
    }

    .photo-image-placeholder {
      height: 100vh;
    }

    .photo-section-title {
      position: sticky;
      top: 20px;
      z-index: 2;
      display: flex;
      justify-content: space-between;
      color: #fff;
      mix-blend-mode: difference;
      pointer-events: none;

      .photo-section-header-letter {
        margin: 0;
        font-size: 0;

        &:first-letter {
          font-size: 8vw;
        }
      }

      .photo-section-header {
        text-align: right;
      }
    }

    .photo-section-content {
      width: 100%;

      tr {
        display: grid;
        grid-template-columns: minmax(0, 260px) minmax(300px, 1fr);
        margin-top: var(--gapSize);
        align-items: end;
      }

      td.label {
        position: sticky;
        left: 0;
        bottom: 30px;
        padding-right: 20px;
        color: #888;
        mix-blend-mode: difference;
      }

      td.image {
        position: relative;

        img {
          width: auto;
          max-width: 100%;
          height: 300px;
          object-fit: cover;
        }

        .filter {
          --filmStripSize: 40px;
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          margin-top: calc(-1 * var(--filmStripSize));
          padding: var(--filmStripSize) 0;
          overflow: hidden;
          /* z-index: 1;
          transition: z-index 0s linear 0.6s; */

          .film-strip {
            position: absolute;
            width: 0%;
            height: 100%;
            top: 0;
            left: 0;
            transition: width 0.6s ease-in-out;
          }

          .r,
          .g,
          .b {
            transition: transform 0.6s ease-in-out, opacity 0.3s linear 0.6s;
            opacity: 0;
          }

          &:hover {
            z-index: 2;

            .film-strip {
              width: 100%;
            }

            .r {
              transform: translate(33.3%, 0%);
              opacity: 1;
              transition-delay: 0s;
            }

            .g {
              transform: translate(66.6%, 0%);
              opacity: 1;
              transition-delay: 0s;
            }

            .b {
              transform: translate(100%, 0%);
              opacity: 1;
              transition-delay: 0s;
            }
          }

          img {
            left: 0;
            top: var(--filmStripSize);
            position: absolute;
            mix-blend-mode: lighten;
            pointer-events: none;
          }
        }
      }
    }
  }
}

@media screen and (max-width: 800px) {
  .photo .photo-section .photo-section-content td.image img {
    height: 200px;
  }
}