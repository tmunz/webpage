.frame.photo-frame.active {
  .background-image {
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    transform: scale(14) translate(-5%, 17%);
  }
}

.photo {
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(5px);
  object-fit: none;

  .map-label {
    color: white;
    position: absolute;
    transform: translate(-50%, -50%);
    pointer-events: auto;
    cursor: pointer;
    white-space: nowrap;
    text-align: center;

    img {
      clip-path: circle();
      max-width: 100px;
      max-height: 100px;
      transition: all 0.6s ease;
    }

    &:hover {
      img {
        max-width: 120px;
        max-height: 120px;
      }
    }

    .location {
      font-size: 0.8em;
      color: grey;
    }
  }
}