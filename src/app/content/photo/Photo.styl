.photo {
  --actionColor: #444;
  --activeColor: #222;
  --photoBackgroundColor: #aadbc3;

  height: 100%;
  width: 100%;
  overflow: auto;
  margin-left: calc(-1* var(--frame-title-size));
  padding-left: var(--frame-title-size);
  margin-top: calc(-1* var(--frame-close-button-size));
  padding-top: var(--frame-close-button-size);

  .camera-viewer {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
  }

  .camera-viewer-focusing {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;
  }

  .photo-section {

    &:first-of-type {
      .photo-section-title {
        margin-top: -100vh;
      }
    }

    .photo-section-title {
      position: sticky;
      top: 20px;
      z-index: 1;
      display: flex;
      justify-content: space-between;
      padding: 0 40px;
      color: #fff;
      mix-blend-mode: difference;

      .photo-section-header-letter {
        font-size: 0;

        &:first-letter {
          font-size: 8vw;
        }
      }
    }

    .photo-image {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: flex-end;
      align-content: left;
      margin: 60px 30px 20px;

      label {
        position: sticky;
        bottom: 30px;
        width: 260px;
      }

      &>.shader-image, &>img {
        display: block;
        width: auto;
        height: 300px;
        object-fit: cover;
      }
    }

    .photo-image-placeholder {
      height: 100vh;
    }
  }
}