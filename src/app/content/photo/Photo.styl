.photo {
  --actionColor: #444;
  --activeColor: #222;
  --photoBackgroundColor: #aadbc3;

  height: 100%;
  width: 100%;
  overflow: auto;
  margin-left: calc(-1* var(--frame-title-size));
  padding-left: var(--frame-title-size);
  margin-top: calc(-1* var(--frame-close-button-size));
  padding-top: var(--frame-close-button-size);

  .camera-viewer {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .camera-viewer-focusing {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;
  }

  .photo-section {
    margin: 0 30px 30px;

    &:first-of-type {
      .photo-section-title {
        margin-top: -100vh;
      }
    }

    .photo-image-placeholder {
      height: 100vh;
    }

    .photo-section-title {
      position: sticky;
      top: 20px;
      z-index: 2;
      display: flex;
      justify-content: space-between;
      color: #fff;
      mix-blend-mode: difference;
      pointer-events: none;

      .photo-section-header-letter {
        margin: 0;
        font-size: 0;

        &:first-letter {
          font-size: 8vw;
        }
      }

      .photo-section-header {
        text-align: right;
      }
    }

    .photo-section-content {
      width: 100%;
      --filmStripSize: 40px;

      tr {
        display: grid;
        grid-template-columns: minmax(0, 260px) minmax(300px, 1fr);
        margin-top: var(--filmStripSize);
        align-items: end;
      }

      td.label {
        position: sticky;
        left: 0;
        bottom: 30px;
        padding-right: 20px;
        color: #888;
        mix-blend-mode: difference;
      }
    }
  }
}

@media screen and (max-width: 800px) {
  .photo .photo-section .photo-section-content td.image img {
    height: 200px;
  }
}