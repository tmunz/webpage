.photo-entry {
  position: relative;

  img {
    width: auto;
    max-width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .filter {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin-top: calc(-1 * var(--filmStripSize));
    padding: var(--filmStripSize) 0;
    overflow: hidden;

    .film-strip {
      position: absolute;
      width: 0%;
      height: 100%;
      top: 0;
      left: 0;
      transition: width 0.6s ease-in-out;
    }

    .rgba-image {
      transition: transform 0.6s ease-in-out, opacity 0.6s linear 0.3s;
      opacity: 0;
      left: 0;
      top: var(--filmStripSize);
      position: absolute;
      mix-blend-mode: lighten;
      pointer-events: none;
    }
  }

  &:hover {
    .film-strip {
      width: 100%;
    }

    .rgba-image {
      opacity: 1;
      transition-delay: 0s;

      &.r {
        transform: translate(33.3%, 1px);
      }

      &.g {
        transform: translate(66.6%, 1px);
      }

      &.b {
        transform: translate(100%, 1px);
      }
    }
  }
}