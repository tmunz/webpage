.paper-canvas {
  display: flex;
  flex-direction: column;
  align-items: center;

  &.open {
    height: 600px;
  }

  &.closed {
    height: 50px;
  }

  .controls {
    position: absolute;
  }

  .canvas-wrapper {
    width: 100%;
    height: 100%;
    background-color: #fff;

    canvas {
      width: 100%;
      height: 100%;
    }
  }
}