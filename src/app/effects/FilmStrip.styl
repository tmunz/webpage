.film-strip {
  --_filmStripColor: var(--filmStripColor, rgba(54, 39, 0, 0.9));
  --_filmStripSize: var(--filmStripSize, 24px);
  --_filmStripPerfRatio: var(--filmStripPerfRatio, 3);
  --s: calc(var(--_filmStripSize) / 2.25);
  background-repeat: repeat-x;
  background-image:
    linear-gradient(to right, var(--_filmStripColor) var(--s), transparent var(--s), transparent calc(var(--s) * 2), var(--_filmStripColor) calc(var(--s) * 2)),
    linear-gradient(to right, var(--_filmStripColor) var(--s), transparent var(--s), transparent calc(var(--s) * 2), var(--_filmStripColor) calc(var(--s) * 2)),
    linear-gradient(to bottom,
      var(--_filmStripColor) 0, var(--_filmStripColor) var(--s),
      transparent var(--s), transparent calc(2 * var(--s)),
      var(--_filmStripColor) calc(2 * var(--s)), var(--_filmStripColor) calc(100% - (2 * var(--s))),
      transparent calc(100% - (2 * var(--s))), transparent calc(100% - (var(--s))),
      var(--_filmStripColor) calc(100% - var(--s), var(--_filmStripColor) 100%));
  background-size:
    calc(var(--s) * calc(1 + var(--_filmStripPerfRatio))) var(--s),
    calc(var(--s) * calc(1 + var(--_filmStripPerfRatio))) var(--s),
    100% 100%;
  background-position:
    0 var(--s),
    0 calc(100% - var(--s)),
    top left;

  .film-strip-label {
    position: absolute;
    color:rgba(255, 157, 0, 0.9);
    bottom: 0;
    right: 20px;
    white-space: nowrap;
    overflow: hidden;
  }
}