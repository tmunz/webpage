.painting-canvas {

  .painting-canvas-frontside,
  .painting-canvas-backside {
    border-radius: 4px;
    overflow: hidden;

    --size: 4px;
    --c1: #f8f7ed;
    --c2: #f4f2e3;
    --c3: #f8f7e3;
    --gap: 1px;
    --border: 80px;
    --cornerSize: calc(1.35 * var(--border));
    --cornerWidth: 1px;

    background:
      conic-gradient(at var(--size) calc(100% - var(--size)), #0000 270deg, var(--c1) 0) calc(var(--size) + var(--gap)) 0,
      linear-gradient(var(--c2) var(--size), #0000 0) 0 var(--gap),
      conic-gradient(at var(--size) calc(100% - var(--size)), #0000 90deg, var(--c2) 0 180deg, var(--c1) 0),
      var(--c3);
    background-size: calc(2*(var(--size) + var(--gap))) calc(2*(var(--size) + var(--gap)));
    width: 100%;
    height: 100%;

    &.painting-canvas-backside {
      box-sizing: border-box;
      padding: var(--border);

      .painting-canvas-backside-content {
        box-shadow: inset 0 0 50px 5px rgba(0, 0, 0, 0.5), 0 4px 15px rgba(0, 0, 0, 0.3);
        border-radius: 2px;
        padding: 20px;
        box-sizing: border-box;
        width: 100%;
        height: 100%;
      }

      .corner {
        content: '';
        position: absolute;
        width: 1px;
        height: var(--cornerSize);
        background: var(--c3);
        box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.5);

        &:nth-child(1) {
          top: 0;
          left: 0;
          transform: translate(calc(var(--border) / 2 - 2px), -12px) rotate(-45deg);
        }

        &:nth-child(2) {
          top: 0;
          right: 0;
          transform: translate(calc(var(--border) / -2 - 4px), -16px) rotate(45deg);
        }

        &:nth-child(3) {
          bottom: 0;
          left: 0;
          transform: translate(calc(var(--border) / 2 - 2px), 12px) rotate(45deg);
        }

        &:nth-child(4) {
          bottom: 0;
          right: 0;
          transform: translate(calc(var(--border) / -2 - 4px), 16px) rotate(-45deg);
        }
      }
    }
  }
}