.taped {
  position: relative;
  display: inline-block;
}

.tape {
  position: absolute;
  background-color: hsla(0, 0%, 100%, 0.2);
  box-shadow: inset 0 0 1em 0.5em hsla(0, 0%, 100%, 0.1);
  height: 40px;
  width: 120px;
  filter: drop-shadow(0 1px 1px hsla(0, 0%, 0%, 0.3));
  backdrop-filter: blur(2px);

  &:before,
  &:after {
    content: '';
    position: absolute;
    background-size: 4px 4px;
    top: 0;
    bottom: 0;
    width: 3px;
  }

  &:before {
    background-image: linear-gradient(135deg, transparent 50%, hsla(0, 0%, 100%, 0.3) 50%),
      linear-gradient(-135deg, transparent 50%, hsla(0, 0%, 100%, 0.3) 50%);
    background-position: 100% 100%;
    right: -3px;
  }

  &:after {
    background-image: linear-gradient(45deg, transparent 50%, hsla(0, 0%, 100%, 0.3) 50%),
      linear-gradient(-45deg, transparent 50%, hsla(0, 0%, 100%, 0.3) 50%);
    background-position: 0 100%;
    left: -3px;
  }

  &.tape-0 {
    top: 0;
    left: -30px;
    transform: rotate(-45deg);
  }

  &.tape-1 {
    bottom: 0;
    right: -30px;
    transform: rotate(-45deg);
  }

  &.tape-2 {
    top: 0;
    right: -30px;
    transform: rotate(45deg);
  }

  &.tape-3 {
    bottom: -0;
    left: -30px;
    transform: rotate(45deg);
  }

  &.tape-4 {
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  &.tape-5 {
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 50%);
  }

  &.tape-6 {
    left: 0;
    top: 50%;
    transform: translate(-50%, -50%) rotate(90deg);
  }

  &.tape-7 {
    right: 0;
    top: 50%;
    transform: translate(50%, -50%) rotate(90deg);
  }
}