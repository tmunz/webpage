.project-document {

  --_projectDocumentColor: var(--projectDocumentColor, white);
  --_projectDocumentBorderColor: var(--projectDocumentBorderColor, black);

  position: relative;
  padding: 20px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  background-color: var(--_projectDocumentColor);

  .project-document-container {
    border: 1px solid var(--_projectDocumentBorderColor);
    position: relative;
    width: 100%;
    height: 100%;

    .project-document-border-indicator {
      position: absolute;
      width: 0px;
      height: 20px;
      border: 1px solid var(--_projectDocumentBorderColor);
      pointer-events: none;
      z-index: 2;

      &.project-document-border-indicator-left {
        top: 50%;
        left: 0;
        transform: translate(-50%, -50%) rotate(90deg);
      }

      &.project-document-border-indicator-top {
        top: 0;
        left: 50%;
        transform: translateY(-50%);
      }

      &.project-document-border-indicator-right {
        top: 50%;
        right: 0;
        transform: translate(-50%, -50%) rotate(90deg);
      }

      &.project-document-border-indicator-bottom {
        bottom: 0;
        left: 50%;
        transform: translateY(50%);
      }
    }

    .project-document-title-block {
      position: absolute;
      right: 0;
      bottom: 0;
      width: 100%;
      max-width: 560px;
      background-color: var(--_projectDocumentColor);
      display: grid;
      grid-template-columns: 1fr 0.7fr 0.3fr 2fr 0.5fr 0.5fr;
      grid-template-rows: 1fr 1fr 1fr 1.5fr;
      border: 1px solid var(--_projectDocumentBorderColor);
      border-width: 1px 0 0 1px;
      z-index: 1;
      container-name: project-document-title-block;
      container-type: inline-size;


      &>* {
        border: 1px solid var(--_projectDocumentBorderColor);
      }

      .project-document-notes {
        grid-row: 1 / span 3;
        grid-column: 1 / span 3;

        .value {
          font-size: 0.5rem !important;
        }
      }

      .project-document-project {
        grid-row: 1;
        grid-column: 4 / span 3;
      }

      .project-document-creator {
        grid-row: 2;
        grid-column: 4;
      }

      .project-document-date-started {
        grid-row: 2;
        grid-column: 5 / span 2;
      }

      .project-document-links {
        grid-row: 3;
        grid-column: 4;
      }

      .project-document-date-completed {
        grid-row: 3;
        grid-column: 5 / span 2;
      }

      .project-document-perspective {
        grid-row: 4;
        grid-column: 1;
      }

      .project-document-dimensions {
        grid-row: 4;
        grid-column: 2;
      }

      .project-document-unit {
        grid-row: 4;
        grid-column: 3;
      }

      .project-document-material {
        grid-row: 4;
        grid-column: 4;
      }

      .project-document-instructions {
        grid-row: 4;
        grid-column: 5;
      }

      .project-document-revision {
        grid-row: 4;
        grid-column: 6;
      }

      .project-document-field {
        position: relative;
        overflow: hidden;
        display: flex;
        width: 100%;
        height: 100%;

        &>label {
          display: inline-block;
          position: absolute;
          font-size: 0.5rem;
          top: 2px;
          left: 2px;
          text-transform: uppercase;
        }

        &>.value {
          font-family: 'post_no_bills_colomboregular';
          display: inline-block;
          align-self: flex-end;
          padding: 10px 4px 4px;
          margin: 0;
          border: none;
          border-bottom: 1px solid var(--_projectDocumentBorderColor);
          font-size: 1rem;
          vertical-align: bottom;
        }
      }
    }

    .project-document-content {
      box-sizing: border-box;
      overflow: hidden;

      &.project-document-checkered {
        background-image:
          linear-gradient(90deg, rgba(0, 0, 0, 0.1) 1px, transparent 1px),
          linear-gradient(180deg, rgba(0, 0, 0, 0.1) 1px, transparent 1px),
          linear-gradient(90deg, rgba(0, 0, 0, 0.25) 1px, transparent 1px),
          linear-gradient(180deg, rgba(0, 0, 0, 0.25) 1px, transparent 1px);
        background-size: 10px 10px, 10px 10px, 100px 100px, 100px 100px;
      }
    }
  }
}

@container project-document-title-block (width < 500px) {
  .project-document .project-document-container .project-document-title-block .project-document-field {

    &>label {
      font-size: 0.4rem;
    }

    &>.value {
      font-size: 0.7rem;
    }
  }
}