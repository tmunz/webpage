.camera-viewer {

  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  position: relative;
  /* TODO */

  .camera-viewer-overlay {
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    bottom: 20px;
    pointer-events: none;
    display: flex;
    justify-content: space-between;

    .camera-viewer-left,
    .camera-viewer-right {
      display: flex;
      flex-direction: column;
      justify-content: space-between;

      &::before,
      &::after {
        content: "";
        display: block;
        height: 5vw;
        width: 5vw;
        border: 1.5px solid #fff;
        mix-blend-mode: difference;
      }

      &.camera-viewer-left::before {
        border-width: 1.5px 0 0 1.5px;
      }

      &.camera-viewer-left::after {
        border-width: 0 0 1.5px 1.5px;
      }

      &.camera-viewer-right::before {
        border-width: 1.5px 1.5px 0 0;
      }

      &.camera-viewer-right::after {
        border-width: 0 1.5px 1.5px 0;
      }
    }

    .camera-viewer-center {
      align-self: center;
      width: 5vw;
      height: 5vw;
      border-radius: 50%;
      border: 1.5px solid #fff;
      mix-blend-mode: difference;
    }
  }
}