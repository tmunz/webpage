.image-gallery {
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(5px);

  .image-grid {
    display: grid;
    grid-row-gap: 10px;
    transition: 0.2s grid-row-gap ease-in-out 0.4s;
    justify-items: center;
    align-items: center;

    &.single-image-mode {
      grid-row-gap: 0px;

      .image-row {
        grid-column-gap: 0px;

        .image-entry:not(.active) {
          max-height: 0px;
        }
      }
    }

    .image-row {
      display: grid;
      grid-column-gap: 10px;
      transition: 0.2s grid-column-gap ease-in-out 0.4s, 0.6s grid-template-columns ease-in-out;

      .image-entry {
        max-height: 90vh;
        transition: 0.6s max-height ease-in-out;
      }
    }
  }
}