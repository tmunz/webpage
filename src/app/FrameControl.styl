.frame-control {
  color: white;
  mix-blend-mode: difference;
  transition: all 0.6s ease;
  display: inline-flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: left;
  backdrop-filter: blur(0);
  border-bottom: 1px solid white;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;

  .close-img {
    position: relative;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: all 0.6s ease, opacity 0.6s ease 0.6s, width 0.6s ease 0.6s, height 0.6s ease 0.6s;

    .close-img-line {
      position: absolute;
      border: 1px solid white;
      width: 0;
      height: 0;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      transition: all 0.6s ease;
      mix-blend-mode: normal;
      transform: rotate(0deg);
      box-sizing: border-box;

      &.left {
        height: 100%;
        right: auto;
      }

      &.top {
        width: 100%;
        bottom: auto;
      }

      &.right {
        height: 100%;
        left: auto;

      }

      &.bottom {
        width: 100%;
        top: auto;
      }
    }
  }

  &.active {
    backdrop-filter: blur(5px);

    .close-img {
      width: 30px;
      height: 30px;
      opacity: 1;
      transform: rotate(45deg);
      transition: all 0.6s ease, opacity 0.2s ease, transform 0.6s ease 0.6s;


      .close-img-line {
        &.left {
          transform: translate(15px, 0);
        }

        &.top {
          transform: translate(0, 15px);
        }

        &.right {
          transform: translate(-15px, 0);
        }

        &.bottom {
          transform: translate(0, -15px);
        }
      }
    }
  }
}